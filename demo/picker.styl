$twg-green = #5bb16E

:local
  .picker, .picker li {
    list-style: none;
    margin: 0;
    padding: 0
  }

  .picker {
    padding-bottom: 10px;
    margin-bottom: 10px;
    border-bottom: 1px solid #ccc
  }

  .picker li {
    display: inline-block;
    padding: 5px 10px;
    margin-right: 10px;
    background-color: $twg-green;
    color: white;
    cursor: pointer

    &.loaded {
      background-color: lighten($twg-green, 40%)
    }
  }